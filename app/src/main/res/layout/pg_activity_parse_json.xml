<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/HeaderTextView"
        android:text="@string/ui_parse_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_big" />

    <Spinner
        style="@style/PrimarySpinner"
        android:id="@+id/spinnerParseJSON"
        android:entries="@array/json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <Button
        style="@style/PrimaryButton"
        android:id="@+id/buttonParse"
        android:text="@string/ui_parse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>