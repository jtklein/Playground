<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom button base style -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom primary button style -->
    <style name="PrimaryButton" parent="@style/Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginTop">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginRight">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_first_tier</item>
    </style>

    <!-- Custom primary edit text style -->
    <style name="PrimaryEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginRight">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginTop">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_first_tier</item>
    </style>

    <!-- Custom header text view style -->
    <style name="PrimaryTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Custom header text view style -->
    <style name="HeaderTextView" parent="PrimaryTextView">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Custom second level text view style -->
    <style name="SecondLevelTextView" parent="PrimaryTextView">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <!-- Custom spinner style -->
    <style name="PrimarySpinner" parent="@android:style/Widget.Spinner">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
    </style>

    <!-- Custom horizontal progress bar style -->
    <style name="PrimaryHorizontalProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
        <item name="android:progress">0</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
    </style>

    <!-- Custom image view -->
    <style name="PrimaryImageView">
        <item name="android:padding">@dimen/material_margin_first_tier</item>
    </style>

</resources>
