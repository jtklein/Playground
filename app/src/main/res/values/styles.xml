<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom button base style -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom primary button -->
    <style name="PrimaryButton" parent="@style/Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginTop">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginRight">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_first_tier</item>
    </style>

    <!-- Custom primary edit text -->
    <style name="PrimaryEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginRight">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginTop">@dimen/material_margin_first_tier</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_first_tier</item>
    </style>

    <!-- Custom header text view -->
    <style name="HeaderTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/material_margin_first_tier</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
